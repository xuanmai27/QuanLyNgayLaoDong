
@{
    ViewBag.Title = "QuanLyTaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/Content/Admin/css/AccountManager.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
<div class="container main-content">
    <div style="margin-bottom:20px">
        <button class="button" data-bs-toggle="modal" data-bs-target="#AddAccountModal">
            <i class="fa fa-plus-circle me-1" style="color:aquamarine" aria-hidden="true"></i>
            ADD
        </button>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 rounded-4">
                <div class="card-header pb-0 pt-3">
                    <h6>Danh sách tài khoản</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ACCOUNT</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">ROLE</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">STATUS</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ACTION</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img class="avt" src="~/Content/Admin/Image/Screenshot 2025-02-23 214442.png" class="avatar avatar-sm me-3" alt="user1">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">Xuân Mai</h6>
                                                <p class="text-xs text-secondary mb-0">xuanmai274@gmail.com</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">student</p>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="activeStatus">inactive</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <a style="border: none;" class="button" href="/AdminHome/EditQuanLy" >Edit</a>
                                        <button style="border: none;" class="button">Lock</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AddAccountModal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel">TÀI KHOẢN</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="bookingForm">
                    <h5 class="text-primary mt-3">THÔNG TIN NGƯỜI DÙNG</h5>
                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <input class="form-control" type="text" id="Id" placeholder="Mã số (Bắt buộc)">
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="text" id="fullName" placeholder="Họ tên" (Bắt buộc)">
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="text" id="diachi" placeholder="Địa chỉ">
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="email" id="email" placeholder="Email">
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="text" id="sdt" placeholder="Số điện thoại">
                        </div>
                        <div class="col-md-6">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheck1">
                                <label class="form-check-label" for="inlineCheck1">Quản lý</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="dob" class="form-label">Ngày tháng năm sinh:</label>
                            <input class="form-control" type="date" id="dob">
                        </div>
                    </div>

                    <!-- Upload File -->
                    <div class="mt-3">
                        <label for="fileInput" class="d-inline-flex align-items-center gap-2 p-2 border rounded bg-light cursor-pointer">
                            <img src="~/Content/Admin/Image/Circle-icons-image.png" alt="icon" style="width: 24px; height: 24px;">
                            Ảnh
                        </label>
                        <input type="file" id="fileInput" class="d-none" onchange="previewImage()">
                        <img id="imagePreview" class="mt-2" style="width: 60px;">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary" >THÊM</button>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            
          
        </div>
    </div>
</div>

<script>
    function openModal() {
        var modal = new bootstrap.Modal(document.getElementById('AddAccountModal'));
        modal.show();
    }
    function previewImage() {
        const fileInput = document.getElementById('fileInput');
        const imagePreview = document.getElementById('imagePreview');

        // Kiểm tra xem người dùng có chọn file không
        if (fileInput.files && fileInput.files[0]) {
            const reader = new FileReader();

            // Đọc file và hiển thị ảnh
            reader.onload = function (e) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';  // Hiển thị ảnh
            }

            // Đọc file ảnh đã chọn
            reader.readAsDataURL(fileInput.files[0]);
        }
    }
</script>

