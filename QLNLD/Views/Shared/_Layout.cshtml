<html5>
    <head>
        <link rel="stylesheet" href="@Url.Content("~/Content/Admin/css/layout.css")">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        @RenderSection("Styles", required: false)

    </head>
    <body  style="overflow-x: hidden;"> <!-- Ngăn chặn thanh cuộn ngang -->
        <div class="d-flex">
            <!-- Sidebar -->
            <aside class="bg-white position-fixed shadow m-4 rounded-5 pb-4"
                   style="width: 250px; height: 100vh; left: 0; top: 0;">
                <div class="p-3">
                    <a class="navbar-brand d-flex align-items-center" href="#">
                        <img src="@Url.Content("~/Content/Admin/Image/Screenshot 2025-02-23 214442.png")" style="height:40px;width:40px" alt="main_logo">
                        <span class="ms-2 fw-bold grayColor">XIN CHÀO, ADMIN</span>
                    </a>
                </div>
                <hr class="hr">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a href="/AdminHome/Index" class="nav-link active fw-bold grayColor" asp-controller="AdminHome" asp-action="Index">
                            <i class="fa-solid fa-tv text-dark text-sm opacity-10 mx-3"></i> HOME
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link fw-bold grayColor dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-list-alt text-dark text-sm opacity-10 mx-3"></i> TÀI KHOẢN
                        </a>
                        <ul class="dropdown-menu menu" aria-labelledby="accountDropdown">
                            <li><a class="dropdown-item menuitem" href="/AdminHome/QuanLy">QUẢN LÝ</a></li>
                            <li><a class="dropdown-item menuitem" href="/AdminHome/SinhVien">SINH VIÊN</a></li>
                        </ul>
                    </li>
                </ul>
            </aside>

            <!-- Main Content -->
            <main class="main-content flex-grow-1 position-relative border-radius-lg"
                  style="margin-left: 280px; padding: 20px; width: calc(100% - 280px);">
                <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl">
                    <div class="container-fluid py-1 px-3">
                        <img src="@Url.Content("~/Content/Admin/Image/LogoTruong.png")" style="object-fit:cover;margin-right:20px" />
                        @*<h6 class="font-weight-bolder text-white mb-0">ĐỒNG THÁP UNIVERSITY</h6>*@
                        <div class="collapse navbar-collapse" id="navbar">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <button class="timkiem">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    Sign out
                                </button>
                            </div>
                        </div>
                    </div>
                </nav>

                <div class="container-fluid py-4">
                    @RenderBody()
                </div>
            </main>
        </div>

</body> 
</html5>